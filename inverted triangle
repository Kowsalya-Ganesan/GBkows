s=input().strip()
m=(len(s)//3)+1
for i in range(m):
    print(s[i],end="")
    if i!=m-1:
        print("-",end="")
f=1
l=(m+(m-1))-4
p=m
q=len(s)-1
print()
for i in range(m-1):
    print('-'*f,end="")
    print(s[q],end="")
    print('-'*l,end="")
    if p!=q: print(s[p])
    p+=1
    q-=1
    f+=1
    l-=2
